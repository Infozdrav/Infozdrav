@model Infozdrav.Web.Models.Trbovlje.AnalyserViewModel

@{
    ViewBag.Title = "Add analyser";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name">Analyser name</label>
        <input asp-for="Name" type="text"
               data-val-required="The Analyser name field is required."
               class="form-control" id="name" placeholder="Enter analyser name">
        <span class="form-text text-danger text-muted" asp-validation-for="Name"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a href="@Url.Action("Analyser")"
       class="btn btn-primary">Cancel</a>
</form>
