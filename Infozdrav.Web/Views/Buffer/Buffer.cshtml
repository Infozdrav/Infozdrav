@model Infozdrav.Web.Models.Trbovlje.BufferViewModel

@{
    ViewBag.Title = "Buffer";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

<form asp-action="Buffer" method="post">
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
        <label asp-for="Name">Article name</label>
        <input asp-for="Name" type="text"
               data-val-required="The Article name field is required."
               class="form-control" id="name" placeholder="Enter article name">
        <span class="form-text text-danger text-muted" asp-validation-for="Name"></span>

        <label asp-for="ArticleId">Artikel</label>
        <br />
        @Html.DropDownListFor(m => m.ArticleId, Model.Articles, "Izberi artikel")
        <span class="form-text text-danger text-muted" asp-validation-for="ArticleId"></span>
        <br />

        <label asp-for="UseByDate">Rok uporabe</label>
        <input asp-for="UseByDate" type="date"
               min="@DateTime.Today.ToString("yyyy-MM-dd")"
               data-val-required="Potrebno je vnesti rok uporabe."
               class="form-control" id="UseByDate">
        <span class="form-text text-danger text-muted" asp-validation-for="UseByDate"></span>

        <label asp-for="Note">Opombe</label>
        <input asp-for="Note" type="text"
               class="form-control" id="Note">

        <label asp-for="StorageTypeId">Način shranjevanja</label>
        <br />
        @Html.DropDownListFor(m => m.StorageTypeId, Model.StorageTypes, "Izberi način shranjevanja")
        <span class="form-text text-danger text-muted" asp-validation-for="StorageTypeId"></span>
        <br />

        <label asp-for="StorageLocationId">Mesto shranjevanja</label>
        <br />
        @Html.DropDownListFor(m => m.StorageLocationId, Model.StorageLocations, "Izberi mesto shranjevanja")
        <span class="form-text text-danger text-muted" asp-validation-for="StorageLocationId"></span>
        <br />

        <label asp-for="WorkLocationId">Delovna lokacija</label>
        <br />
        @Html.DropDownListFor(m => m.WorkLocationId, Model.WorkLocations, "Izberi delovno lokacijo")
        <span class="form-text text-danger text-muted" asp-validation-for="WorkLocationId"></span>
        <br />

        <label asp-for="AnalyserId">Analizator</label>
        <br />
        @Html.DropDownListFor(m => m.AnalyserId, Model.Analysers, "Izberi analizator")
        <span class="form-text text-danger text-muted" asp-validation-for="AnalyserId"></span>
        <br />

    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a href="@Url.Action("Index")"
       class="btn btn-primary">Back</a>
</form>
