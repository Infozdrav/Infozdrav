@model Infozdrav.Web.Models.Trbovlje.SupplierViewModel

@{
    ViewBag.Title = "Dobavitelji";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

<form asp-action="Supplier" method="post">
    <div class="form-group">
        <label asp-for="Name">Ime dobavitelja</label>
        <input asp-for="Name" type="text"
               data-val-required="Potrebno je vnesti ime dobavitelja."
               class="form-control" id="name" placeholder="Vnesi ime dobavitelja">
        <span class="form-text text-danger text-muted" asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address">Naslov</label>
        <input asp-for="Address" type="text"
               data-val-required="Potrebno je vnesti naslov dobavitelja."
               class="form-control" id="address" placeholder="Vnesi naslov dobavitelja">
        <span class="form-text text-danger text-muted" asp-validation-for="Address"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email">E-pošta</label>
        <input asp-for="Email" type="text"
               data-val-email="The Supplier email field is not a valid email address."
               data-val-required="Potrebno je vnesti e-poštni naslov dobavitelja."
               class="form-control" id="email" placeholder="Vnesi e-poštni naslov dobavitelja">
        <span class="form-text text-danger text-muted" asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="Phone">Telefonska številka</label>
        <input asp-for="Phone" type="text"
               data-val-required="Potrebno je vnesti telefonsko številko dobavitelja."
               class="form-control" id="phone" placeholder="Vnesi telefonsko številko dobavitelja">
        <span class="form-text text-danger text-muted" asp-validation-for="Phone"></span>
    </div>
    <button type="submit" class="btn btn-primary">Shrani</button>
    <a href="@Url.Action("Index")"
       class="btn btn-primary">Back</a>
</form>
