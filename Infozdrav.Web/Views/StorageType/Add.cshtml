@model Infozdrav.Web.Models.Trbovlje.StorageTypeViewModel

@{
    ViewBag.Title = "Dodaj tip shranjevanja";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name">Tip shranjevanja</label>
        <input asp-for="Name" type="text"
               data-val-required="Potrebno je vnesti naziv tipa shranjevanja."
               class="form-control" id="name" placeholder="Vnesi naziv tipa shranjevanja">
        <span class="form-text text-danger text-muted" asp-validation-for="Name"></span>
    </div>
    <button type="submit" class="btn btn-primary">Shrani</button>
    <a href="@Url.Action("StorageType")"
       class="btn btn-primary">Prekliči</a>
</form>
