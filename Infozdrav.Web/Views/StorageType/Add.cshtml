@model Infozdrav.Web.Models.Trbovlje.StorageTypeViewModel

@{
    ViewBag.Title = "Add storage type";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name">Storage type</label>
        <input asp-for="Name" type="text"
               data-val-required="The Storge type field is required."
               class="form-control" id="name" placeholder="Enter storage type">
        <span class="form-text text-danger text-muted" asp-validation-for="Name"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a href="@Url.Action("StorageType")"
       class="btn btn-primary">Cancel</a>
</form>
