@model Infozdrav.Web.Models.Trbovlje.WorkLocationViewModel

@{
    ViewBag.Title = "Dodaj delovno lokacijo";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name">Delovna lokacija</label>
        <input asp-for="Name" type="text"
               data-val-required="Potrebno je vnesti naziv delovne lokacije."
               class="form-control" id="name" placeholder="Vnesi naziv delovne lokacije">
        <span class="form-text text-danger text-muted" asp-validation-for="Name"></span>
    </div>
    <button type="submit" class="btn btn-primary">Shrani</button>
    <a href="@Url.Action("WorkLocation")"
       class="btn btn-primary">Prekliči</a>
</form>
