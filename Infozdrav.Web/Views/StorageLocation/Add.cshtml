@model Infozdrav.Web.Models.Trbovlje.StorageLocationViewModel

@{
    ViewBag.Title = "Dodaj mesto shranjevanja";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name">Mesto shranjevanja</label>
        <input asp-for="Name" type="text"
               data-val-required="Potrebno je vnesti naziv mesta shranjevanja."
               class="form-control" id="name" placeholder="Vnesi naziv mesta shranjevanja">
        <span class="form-text text-danger text-muted" asp-validation-for="Name"></span>
    </div>
    <button type="submit" class="btn btn-primary">Shrani</button>
    <a href="@Url.Action("StorageLocation")/"
       class="btn btn-primary">Prekliči</a>
</form>
