@model Infozdrav.Web.Models.Labena.CfDnaResultsViewModel

@{
    ViewData["Title"] = "Rezultati";
}

<h2>Rezultati</h2>

<form asp-action="RezultatiCfDna" method="post">
    <div class="form-group">

        <label asp-for="Sample">Identifikacijska številka vzorca</label>
        @Html.DropDownList("Sample",
            new SelectList(ViewBag.Samples),
            "Izberi vzorec",
            new {@class = "form-control"})

        <label asp-for="NumberOfCopies">Število kopij / 20 uL</label>
        <input asp-for="NumberOfCopies" min="0" step="0.001" type="number" 
               data-val-required="Potreben je vnos števila kopij" onchange="showTable();"
               class="form-control" id="NumberOfCopies" placeholder="Vnesi število kopij na 20 uL" required/>
        <span class="form-text text-danger text-muted" asp-validation-for="NumberOfCopies"></span>
        
        <label asp-for="Volume">Prostornina [Rkc]</label>
        <input asp-for="Volume" min="0" step="0.001" type="number" 
               data-val-required="Potreben je vnos prostornine" onchange="showTable();"
               class="form-control" id="Volume" placeholder="Vnesi prostornino" required/>
        <span class="form-text text-danger text-muted" asp-validation-for="Volume"></span>
    </div>

    <script>
        document.getElementById("Sample").required = true;
        document.getElementById("NumberOfCopies").required = true;
        document.getElementById("Volume").required = true;
    </script>

    <button type="submit" class="btn btn-primary">Shrani rezultate</button>
    <a href="@Url.Action("Index")" class="btn btn-primary">Prekliči</a>
</form>
