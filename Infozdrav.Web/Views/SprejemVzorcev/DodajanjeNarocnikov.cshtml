@model Infozdrav.Web.Models.Labena.SprejemVzorcevViewModel
@{
    ViewData["Title"] = "Dodajanje naročnika";
}

<h2>Dodajanje naročnika</h2>


<form asp-action="DodajanjeNarocnikov" method="post">

    <div class="form-group">

        <label asp-for="SupplierName">Naziv</label>
        <span class="form-text text-danger text-muted" asp-validation-for="SupplierName"></span>
        <input asp-for="SupplierName" type="text" data-val-required="Potreben je vnos naziva"
               class="form-control" id="SupplierName" placeholder="Vnesi naziv naročnika"/>

        <label asp-for="TaxNumber">Davčna številka</label>
        <span class="form-text text-danger text-muted" asp-validation-for="TaxNumber"></span>
        <input asp-for="TaxNumber" type="text" data-val-required="Potreben je vnos davčne številke"
               class="form-control" id="TaxNumber" placeholder="Vnesi davčno številko"/>

        <label asp-for="StreetNum">Ulica in hišna številka</label>
        <span class="form-text text-danger text-muted" asp-validation-for="StreetNum"></span>
        <input asp-for="StreetNum" type="text" data-val-required="Potreben je vnos ulice in hišne številke"
               class="form-control" id="StreetNum" placeholder="Vnesi ulico in hišno številko"/>

        <label asp-for="ZipNumber">Poštna številka</label>
        <span class="form-text text-danger text-muted" asp-validation-for="ZipNumber"></span>
        <input asp-for="ZipNumber" type="text" data-val-required="Potreben je vnos poštne številke"
               class="form-control" id="ZipNumber" placeholder="Vnesi poštno številko"/>

        <label asp-for="City">Kraj</label>
        <span class="form-text text-danger text-muted" asp-validation-for="City"></span>
        <input asp-for="City" type="text" data-val-required="Potreben je vnos kraja"
               class="form-control" id="City" placeholder="Vnesi kraj"/>

        <label asp-for="Country">Država</label>
        <span class="form-text text-danger text-muted" asp-validation-for="Country"></span>
        <input asp-for="Country" type="text" data-val-required="Potreben je vnos države"
               class="form-control" id="Country" placeholder="Vnesi državo"/>

        <label asp-for="IdDDV">Id DDV</label>
        <input asp-for="IdDDV" type="text" class="form-control" id="IdDDV" placeholder="Vnesi Id DDV"/>
    </div>
    <script>
        document.getElementById("SupplierName").required = true;
        document.getElementById("TaxNumber").required = true;
        document.getElementById("StreetNum").required = true;
        document.getElementById("ZipNumber").required = true;
        document.getElementById("City").required = true;
        document.getElementById("Country").required = true;
    </script>
    <button type="submit" class="btn btn-primary">Shrani naročnika</button>
    <a href="@Url.Action("Sprejem")"
       class="btn btn-primary">
        Prekliči
    </a>
</form>