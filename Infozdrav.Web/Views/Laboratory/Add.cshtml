@model Infozdrav.Web.Models.Trbovlje.LaboratoryViewModel

@{
    ViewBag.Title = "Add laboratory";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name">Laboratory name</label>
        <input asp-for="Name" type="text"
               data-val-required="The Laboratory name field is required."
               class="form-control" id="name" placeholder="Enter laboratory name">
        <span class="form-text text-danger text-muted" asp-validation-for="Name"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a href="@Url.Action("Laboratory")"
       class="btn btn-primary">Cancel</a>
</form>
