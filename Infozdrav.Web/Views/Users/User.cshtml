@model Infozdrav.Web.Models.Manage.UserEditViewModel

@{
    ViewBag.Title = "User";
    Layout = "_Layout";
}

<h2>Edit user: @Model.UserName</h2>

<div asp-validation-summary="All"></div>

<form asp-action="User" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control" type="text" />
                <span class="form-text text-danger text-muted" asp-validation-for="UserName"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" type="text" />
                <span class="form-text text-danger text-muted" asp-validation-for="FirstName"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" type="Text" />
                <span class="form-text text-danger text-muted" asp-validation-for="LastName"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" type="email"
                       class="form-control" placeholder="Enter email">
                <span class="form-text text-danger text-muted" asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label asp-for="Enabled"></label>
                <input asp-for="Enabled" type="checkbox">
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" />
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password"
                       class="form-control">
                <span class="form-text text-danger text-muted" asp-validation-for="Password"></span>
            </div>
        </div>
        <div class="col-md-6">
            <label>Roles</label>
            <ul class="list-group">
                @for (var i = 0; i < Model.Roles.Count; i++)
                {

                    <li class="list-group-item">
                        <div class="form-check">
                            <input type="checkbox" asp-for="@Model.Roles[i].Selected" class="form-check-input" />
                            <input type="hidden" asp-for="@Model.Roles[i].Name" value="@Model.Roles[i].Name" />
                            <label class="form-check-label" asp-for="@Model.Roles[i]">@Model.Roles[i].Name</label>
                        </div>
                    </li>
                }
            </ul>
        </div>
        <div class="col-md-12">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
</form>
